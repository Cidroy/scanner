<?xml version='1.0' encoding='utf-8'?>
<widget id="com.eventninjaz.rangholic" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Rangholic Scanner</name>
    <description>Barcode Scanner for EventNinjaz that utilises Maple + Wordpress based plugins</description>
    <author email="vicky@rubixcode.com" href="https://rubixcode.com">Rinzler D. Vicky</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="phonegap-plugin-barcodescanner" spec="git+https://github.com/phonegap/phonegap-plugin-barcodescanner.git" />
    <engine name="android" spec="~7.0.0" />
    <engine name="browser" spec="^5.0.3" />
</widget>
